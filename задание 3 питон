import math
import random

# Генерируем случайные параметры эллипса и координаты точки
a = random.uniform(1, 10)  # Длина большой полуоси
b = random.uniform(1, 10)  # Длина малой полуоси
h = random.uniform(-10, 10)  # Координата x центра эллипса
k = random.uniform(-10, 10)  # Координата y центра эллипса
x0 = random.uniform(-10, 10)  # Координата x точки
y0 = random.uniform(-10, 10)  # Координата y точки

# Проверяем, принадлежит ли точка эллипсу
if ((x0 - h) ** 2 / a ** 2) + ((y0 - k) ** 2 / b ** 2) <= 1:
    print(f"Точка с координатами ({x0}, {y0}) принадлежит эллипсу.")
else:
    print(f"Точка с координатами ({x0}, {y0}) не принадлежит эллипсу.")

# Находим координаты фокусов эллипса
c = math.sqrt(a ** 2 - b ** 2)
f1_x = h - c
f1_y = k
f2_x = h + c
f2_y = k
print(f"Координаты фокусов эллипса: ({f1_x}, {f1_y}), ({f2_x}, {f2_y})")

# Находим длины полуосей эллипса
print(f"Длина большой полуоси: {a}")
print(f"Длина малой полуоси: {b}")

# Находим эксцентриситет эллипса
e = c / a
print(f"Эксцентриситет эллипса: {e}")

# Находим расстояние от директрис эллипса до его центра
d = a / e
print(f"Расстояние от директрис эллипса до его центра: {d}")
